<div class = "wrapper">

  <h1>All the Books</h1>


  <ul>
    <% @products.each do |product| %>
      <div class = "products">
        <li><%= link_to product.name, product_path(product) %></li>
        <li><%= product.description %></li>
        <li><%= dollars(product.price) %></li>
      </div>
    <% end %>
  </ul>
</div>
